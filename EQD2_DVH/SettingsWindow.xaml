<Window x:Class="EQD2_DVH.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asetukset" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FFF0F0F0">
    <StackPanel Margin="20">
        <Label Content="EQD2 D.mean laskentatapa:" FontWeight="Bold" Margin="0,0,0,5"/>
        <RadioButton x:Name="SimpleRadioButton" Content="Yksinkertainen" Margin="5" IsChecked="True"/>
        <RadioButton x:Name="DifferentialRadioButton" Content="Differentiaali-DVH" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Margin="5,0,5,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Peruuta" Width="75" Margin="5,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>